//------------------------------------------------------------------------------
// BS1770
//------------------------------------------------------------------------------

pfs1 = fi.highshelf(2,4,1100);
pfs2 = fi.highpass(2,55);
tg = ba.sec2samp(0.400);

bs1770 = pfs1 : pfs2 <: _ , int(@(0.75*tg)) : 0.5*(RMS(tg)+RMS(tg));

